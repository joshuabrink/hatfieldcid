<%- include ('./partials/navbar.ejs') %>

<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <div class="container-fluid">
            <h3 class="text-center text-danger mb-5 mt-5"><i class="fa fa-envelope"></i>&nbsp; Messages</h3>
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 d-flex">
                            <form id="all" action="/messagesFilter" method="post">
                                <input type="hidden" name="limit" value="0">
                                <button type="submit"  class="btn btn-primary btn-sm">All</button>
                            </form>
                         
                        </div>
                        <div class="col-md-8">
                            <div class="text-md-right">
                                <form action="/searchMessages" method="POST" id="search" class="d-flex">
                               
                                    
                                        <input type="search" name="term" class="form-control form-control-sm"
                                        aria-controls="dataTable" placeholder="Search">
                                        <button class="btn btn-primary d-inline py-0" type="submit"><i
                                            class="fas fa-search"></i></button>
                                  
                                  
                                    </form>
                                    </div>
                        </div>
                        <div class="col-md-2 text-nowrap d-flex justify-content-end">
                            <div aria-controls="dataTable">

                                <select
                                        class="form-control form-control-sm custom-select custom-select-sm"
                                        id="filterAmount">
                                        <!-- <option value="1">1</option> -->
                                        <option value="10">10</option>
                                        <option value="25" selected>25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>


                            </div>
                        </div>
                        <div class="col-md-6 mt-4">
                            <nav class="d-lg-flex align-self-center">
                                <ul class="pagination">
                                    <% for( let i = 0; i < messages.total/25; i++ ) { %>
                                        <% if (i == 0) { %>
                                            <li class="page-item active"><a class="page-link" href="#"><%= i + 1 %> </a></li>
                                        <% } else { %>
                                            <li class="page-item "><a class="page-link" href="#"><%= i + 1 %> </a></li>
                                       <% } %>
                                     
                                    <% } %>

                                </ul>
                            </nav>
                        </div>
                        <div class="col-md-6 mt-4 d-flex flex-row-reverse">
                            <p role="status" aria-live="polite"><span id="lower">1</span> to
                               <span id="upper"><%=messages.total<25?messages.total:25%></span> of <span id="total"><%= messages.total %> </span></p>
                        </div>
                    </div>

                    <div class="table-responsive table mt-4" id="dataTable" role="grid"
                        aria-describedby="dataTable_info">
                        <table class="table dataTable my-0" id="dataTable">
                            <thead>
                                <tr>
                                    <th class="w-45">Contact </th>
                                    <th class="w-30">Message <a id="message-sort" class="col-sort" href=""><i class="fa fa-sort"></i></a></th>
                                    <th class="w-20">Date <a id="date-sort" class="col-sort" href=""><i class="fa fa-sort"></i></a></th>
                                    <th class="w-5"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (messages && messages.data) { %>
                                <% for( let index = 0; index < messages.data.length; index++ ) { %>
                                    
                                <tr>
                                    <% if (typeof messages.data[index] != 'undefined') { %>

                                    <% if (typeof messages.data[index].contact != 'undefined') { %>
                                    <td class="flex start-left flex-wrap pt-0">
                                        <% for( let c = 0; c <  messages.data[index].contact.length; c++ ) { %>
                                        <% if (messages.data[index].contact[c]) { %>
                                        <div class='cross-fade c-tag'>
                                            <div class="top">
                                                <%= messages.data[index].contact[c].name ? messages.data[index].contact[c].name : '' %>
                                            </div>
                                            <div class="under"> <%= messages.data[index].contact[c].number %> </div>
                                        </div>
                                        <% } %>
                                        <% } %>

                                        <% } %>
                                    </td>

                                    <td><%= messages.data[index].message %> </td>
                                    <td><%= messages.data[index].date %></td>
                                    <td>
                                    <form action="/deleteMessage" method="post" class="delete">  
                                        <input type="hidden" name="_id" value="<%= messages.data[index]._id %>">
                                        <input type="hidden" name="async" value="false">
                                        <button class="btn btn-primary" type="submit"><i class="fa fa-trash"></i></button>
                                    </form>
                                        
                                    </td>
                                
                                    <% } %>
                              
                                </tr>
                                <% } %>
                                <% } %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td><strong>Contact</strong></td>
                                    <td><strong>Message</strong></td>
                                    <td><strong>Number</strong></td>
                                   
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-6 align-self-center">
                            <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Showing 1 to
                                10 of 27</p>
                        </div>
                        <div class="col-md-6">
                            <nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                                <ul class="pagination">
                                    <li class="page-item disabled"><a class="page-link" href="#"
                                            aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span
                                                aria-hidden="true">»</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include ('./partials/footer.ejs') %>